<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Loja de Bolsas</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 0; padding: 0; background: #f9f9f9; }
    header { background: #222; color: #fff; padding: 15px; text-align: center; }
    h1 { margin: 0; }
    main { display: flex; gap: 20px; flex-wrap: wrap; justify-content: center; padding: 20px; }
    .produto { background: #fff; border: 1px solid #ddd; border-radius: 10px; width: 220px; padding: 15px; text-align: center; box-shadow: 0 2px 6px rgba(0,0,0,0.1); }
    .produto img { max-width: 100%; border-radius: 10px; }
    .produto h3 { margin: 10px 0; }
    .produto p { color: #444; }
    button { background: #ff4081; border: none; padding: 10px; color: #fff; border-radius: 5px; cursor: pointer; width: 100%; }
    button:hover { background: #e73370; }
    #carrinho { position: fixed; right: 20px; top: 20px; background: #fff; border: 1px solid #ccc; width: 300px; border-radius: 10px; padding: 15px; box-shadow: 0 2px 6px rgba(0,0,0,0.2); }
    #carrinho h2 { margin-top: 0; }
    #carrinho ul { list-style: none; padding: 0; margin: 0; max-height: 200px; overflow-y: auto; }
    #carrinho li { border-bottom: 1px solid #ddd; padding: 5px 0; }
    #total { font-weight: bold; }
  </style>
</head>
<body>
  <header>
    <h1>ðŸ‘œ Loja de Bolsas</h1>
  </header>

  <main id="produtos">
    <div class="produto">
      <img src="https://via.placeholder.com/200" alt="Bolsa de Couro">
      <h3>Bolsa de Couro</h3>
      <p>R$ 150,00</p>
      <button onclick="adicionarCarrinho('Bolsa de Couro', 150)">Adicionar ao Carrinho</button>
    </div>
    <div class="produto">
      <img src="https://via.placeholder.com/200" alt="Bolsa de Praia">
      <h3>Bolsa de Praia</h3>
      <p>R$ 90,00</p>
      <button onclick="adicionarCarrinho('Bolsa de Praia', 90)">Adicionar ao Carrinho</button>
    </div>
    <div class="produto">
      <img src="https://via.placeholder.com/200" alt="Mochila Feminina">
      <h3>Mochila Feminina</h3>
      <p>R$ 120,00</p>
      <button onclick="adicionarCarrinho('Mochila Feminina', 120)">Adicionar ao Carrinho</button>
    </div>
  </main>

  <aside id="carrinho">
    <h2>ðŸ›’ Meu Carrinho</h2>
    <ul id="listaCarrinho"></ul>
    <p>Total: R$ <span id="total">0</span></p>
  </aside>

  <script>
    let carrinho = [];
    function adicionarCarrinho(nome, preco) {
      carrinho.push({ nome, preco });
      atualizarCarrinho();
    }
    function atualizarCarrinho() {
      const lista = document.getElementById("listaCarrinho");
      lista.innerHTML = "";
      let total = 0;
      carrinho.forEach(item => {
        const li = document.createElement("li");
        li.textContent = `${item.nome} - R$ ${item.preco}`;
        lista.appendChild(li);
        total += item.preco;
      });
      document.getElementById("total").textContent = total;
    }
  </script>
</body>
</html>
